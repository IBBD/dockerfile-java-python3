# docker pull ibbd/java-python3-server
#
# Version 2017-04-18

#FROM ibbd/java-python3:openjdk
FROM registry-internal.cn-hangzhou.aliyuncs.com/ibbd/openjdk-python3

MAINTAINER Alex Cai cyy0523xc@gmail.com

RUN \
    apt-get update \
    && apt-get install -y --no-install-recommends build-essential \
    && apt-get autoremove \
    && apt-get clean \
    && rm -r /var/lib/apt/lists/*

RUN \
    pip3 install -U flask \
        flask_restful \
        flask-cors \
        flask-httpauth \
        pyyaml \
        chardet \
        jieba \
        gunicorn \
        cython
